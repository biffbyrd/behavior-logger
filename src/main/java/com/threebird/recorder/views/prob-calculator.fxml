<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0"
	spacing="10.0" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.threebird.recorder.controllers.ConditionalProbabilityController">
	<children>
		<Text strokeType="OUTSIDE" strokeWidth="0.0"
			text="Select a .raw output from a session recording:" />
		<HBox spacing="20.0">
			<children>
				<VBox HBox.hgrow="ALWAYS">
					<children>
						<Label text="File" />
						<HBox spacing="5.0" HBox.hgrow="ALWAYS">
							<children>
								<TextField fx:id="fileField" HBox.hgrow="ALWAYS" />
								<Button fx:id="browseBtn" mnemonicParsing="false"
									onAction="#browseBtnPressed" text="Browse" HBox.hgrow="NEVER" />
							</children>
						</HBox>
						<Label fx:id="fileNotFoundLbl"
							text="That file does not exist" textFill="RED" visible="false" />
					</children>
				</VBox>
			</children>
		</HBox>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</VBox>
